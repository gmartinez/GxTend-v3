<script type="text/javascript">
$(document).ready(function(){

	$("#form_push").ajaxForm({
		dataType:  'json',
		beforeSubmit: function() {
			$("#synch").block({ message: '{$smarty.const._BAR_WAIT_}' });
            $("#div_push #bottom_left").html("");
		},
		success: function (r) {
            for ( var i in r.push ) {
                if (r.push[i] == "ok") {
                    $("#"+i).html("<img src='../img/icons/32/tick.png' alt='ok' title='"+r.push[i]+"'>");
                } else {
                    $("#"+i).html("<img src='../img/icons/32/error.png' alt='err' title='"+r.push[i]+"'>");
                }
            }

            if (r.sts == "ok") {
                $("#div_push #bottom_left").html("<img src='../img/icons/32/tick.png' alt='ok' title='ok'> __LNG__Successful Push__LNG__ "+r.msg);
                $("#form_push button").attr("disabled", "disabled");
                $("#synch").unblock();
            } else if (r.sts == "wrn") {
                $("#div_push #bottom_left").html("<img src='../img/icons/32/warning.png' alt='wrn' title='err'> __LNG__Pushing Data Warning__LNG__ "+r.msg);
                $("#synch").unblock();
            } else {
                $("#div_push #bottom_left").html("<img src='../img/icons/32/error.png' alt='err' title='err'> __LNG__Pushing Data Error__LNG__ "+r.msg);
                $("#synch").unblock();
            }
        },
        error: function (jqXHR) {
            handleXHRerror(jqXHR);
        }
	});

    $("#east_panel #project #div_push img.tip").cluetip({ splitTitle: "|" });
});
</script>
<div id="div_push">

<fieldset>
    <legend>
        <img src='{$smarty.const._IMG_PUSH_SM_}' alt='Push' title=''>&nbsp;__LNG__Push to Server__LNG__.
        [&nbsp;
        <span class='file' title='{$smarty.const._TITLE_HIDE_}' onclick='$("#synch").hide("slow");'>&laquo;</span>
        &nbsp;]
    </legend>
    {if !is_array($local_changes)}
        <br clear="all">
        {$InProve_Smarty->msg("ui-icon-info","__LNG__None Found__LNG__")}
        <div class="myhr"></div>
        <div id="bottom_left" class="left">
            {include file='../skel/ttp.phtml'}
        </div>
        <div  id="bottom_right" class="right">
            &nbsp;
        </div>
    {else}
	<form id="form_push" action="Push/push" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="projguid" value="{$smarty.request.projguid}">
        {foreach from=$local_changes key=commit_id item=commit_data}
        {if $commit_data.commiter != $InProve_Smarty->getSessVar("MyProfile.userdata.username")}
            {assign var=othersCommits value=$othersCommits+1}
            <div class="othersCommits" style="display:none;">
        {else}
            {assign var=myCommits value=$myCommits+1}
            <div class="myCommits" style="display:block;">
        {/if}
        <br clear="all">
        <div class="column left">
            <b>Id :</b> {$InProve_Smarty->cutstr($commit_id,0,$smarty.const._GUID_LEN_)}<br>
            <img src='{$smarty.const._IMG_COMMENT_BLUE_SM_}' alt="comment" title='Comment' style="vertical-align:text-top;"> {$InProve_Smarty->cutstr($commit_data.subject,0,80)}
        </div>
        <div class="column right" id="{$commit_id}">
            <b>__LNG__Commited on__LNG__ :</b> {$InProve_Smarty->ts2str($commit_data.commiterTs)}<br>
            <b>__LNG__Commited by__LNG__ :</b> {$commit_data.commiter}
            <input type="hidden" name="commits[]" value="{$commit_id}">
        </div>
        <br clear="all">
        <table width="100%" align="center" class="list">
        <thead>
            <tr><th>KB<br>&nbsp;# __LNG__Env.__LNG__</th><th>__LNG__Object__LNG__</th><th>__LNG__Sts__LNG__</th></tr>
        </thead>
        <tbody>
            {foreach from=$commit_data.changes key=kbguid item=kb_commit_data}
                <tr>
                    <td colspan="5">{$kb_commit_data.kbinfo.visualid}</td>
                </tr>
                {foreach from=$kb_commit_data.objects key=k item=rec}
                {if $k<3}
                <tr class='{cycle values="odd,even"}'>
                    <td>&nbsp;{$rec.gxinfo.mdlid}</td>
                    <td>&nbsp;
                        {if $rec.gxinfo.objcls!=111}
                        <img src="../img/gx/objclass/{$gx_objcls[$rec.gxinfo.objcls].small}.png" title="{$gx_objcls[$rec.gxinfo.objcls].long}">
                        {else}
                        <img src="../img/icons/16/file.png" title="File">
                        {/if}
                        &nbsp;{$rec.gxinfo.objnam}
                    </td>
                    <td align="center">
                        {if $rec.gitnfo.status=="A"}
                            <img class="tip" alt="new" src="../img/icons/16/new.png" title="__LNG__Change Description__LNG__ [{$rec.gitnfo.status}]|__LNG__Object created in this commit__LNG__.">
                        {elseif $rec.gitnfo.status=="M"}
                            <img class="tip" alt="new" src="../img/icons/16/edit.png" title="__LNG__Change Description__LNG__ [{$rec.gitnfo.status}]|__LNG__Object was modified in this commit__LNG__.">
                        {elseif $rec.gitnfo.status=="D"}
                            <img class="tip" alt="new" src="../img/icons/16/cleanup.png" title="__LNG__Change Description__LNG__ [{$rec.gitnfo.status}]|__LNG__Object was deleted in this commit__LNG__.">
                        {/if}
                    </td>
                </tr>
                {/if}
                {/foreach}
            {/foreach}
                {assign var=totrecs value=$k+1}
                <tr class='{cycle values="odd,even"}'>
                {if $k>3}
                    <td colspan="3" style="text-align:right;font-size:.90em;">__LNG__3 out of__LNG__ {$totrecs} __LNG__objects in this commit__LNG__.&nbsp;</td>
                {else}
                    <td colspan="3" style="text-align:right;font-size:.90em;">{$totrecs} __LNG__object(s) in this commit__LNG__.&nbsp;</td>
                {/if}
                </tr>
        </tbody>
        </table>
        </div>
        {/foreach}
        <div class="myhr"></div>
        <div id="bottom_left" class="left">
            {include file='../skel/ttp.phtml'}
        </div>
        <div  id="bottom_right" class="right buttons">
            <span class="file" onclick="$('.othersCommits').hide('slow');$('.myCommits').show('slow');"><strong>__LNG__My Own__LNG__ :</strong> {$myCommits|default:0}</span>
            <br clear="all">
            <span class="file" onclick="$('.myCommits').hide('slow');$('.othersCommits').show('slow');"><strong>__LNG__Others__LNG__ :</strong> {$othersCommits|default:0}</span>
            <br clear="all">
            <br clear="all">
            {$smarty.const._FORM_BTN_PUSH_}
        </div>
	</form>
    {/if}
</fieldset>

</div>