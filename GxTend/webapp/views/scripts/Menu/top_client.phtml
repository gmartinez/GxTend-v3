<script type="text/javascript">
    function dataSync(type) {

        $(".sync_data").toggle();
        jQuery.getJSON(
                "/Index/sync?type="+type,
                null,
                function (data, textStatus) {
                    showlogmsg();       // Display user message...
                    $("#header-right #top_menu #nav-links #upqueue").html("?");
                    $("#header-right #top_menu #nav-links #dnqueue").html("?");
                    $(".sync_data").toggle();
                    $("#header-right #top_menu #nav-links #upqueue").load("/Index/sync?type=upqueue");
                    $("#header-right #top_menu #nav-links #dnqueue").load("/Index/sync?type=dnqueue");
                }
        );

    }
</script>

