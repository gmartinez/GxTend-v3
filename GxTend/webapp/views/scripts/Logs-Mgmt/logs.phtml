<table class="table list" style="width:100%;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Modified</th>
            <th>Actions</th>
        </tr>        
    </thead>
    <tbody>
        {foreach $logfiles as $i => $fdata}
        <tr class="{if $i%2}odd{else}even{/if}">
            <td>{$fdata.fullname}</td>
            <td>{$fdata.filesize}</td>
            <td>{$fdata.updated}</td>
            <td>
                {$InProve_Smarty->get_popup_link("view_source","/View-Source/?filename={base64_encode({$fdata.fullname})}&send_as={$fdata.basename}&brushas=xml",null,null,"800x600","<span class='ui-icon ui-icon-extlink' style='display:inline-block;' title='Click to View'></span>")}
                &nbsp;
                <a class="pointer" href="/Http/getfile?filename={base64_encode({$fdata.fullname})}&send_as={$fdata.basename}"><span class="ui-icon ui-icon-arrowstop-1-s" style='display:inline-block;' title='Click to Download'></span></a>
            </td>
        </tr>
        {/foreach}
    </tbody>
</table>