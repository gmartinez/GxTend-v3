<script type="text/javascript">
$(document).ready(function(){    
	$("#form_promote").ajaxForm({
		dataType:  'json',
        async: true,
		beforeSubmit: function() {
			$("#div_promote").block({ message: '{$smarty.const._BAR_WAIT_}' });
            $("#bottom_left").html("");
		},
		success: function (r) {
            $("#div_promote").unblock();
            if (r.sts == "ok") {
                $("#form_promote .objlst:checked").each(function (index,Element) {
                    if ($("#form_promote input[name=promotetype]:checked").val()=="import") {
                    $(this).parent("span").html("<span style='font-size:2em;line-height:1em;'>&nbsp;»&nbsp;</span>");
                    }
                });
                setsubmitsts("#form_promote .objlst", "#form_promote button");
                $("#bottom_left").html("<img src='../img/icons/32/tick.png' alt='ok' title='ok'> Promotion was Successful");
                mDialog('text:'+base64_decode(r.msg),'Promote Execution Report', 480, 640);
            } else {
                $("#bottom_left").html("<img src='../img/icons/32/error.png' alt='err' title='err'> Error/Warning in Promotion");
            }
        },
        error: function (jqXHR) {
            handleXHRerror(jqXHR);
        }
	});
    
    setsubmitsts("#form_promote .objlst", "#form_promote button");
    
    $("#browsearea #comp_options").show();
    
    $("#east_panel #div_promote img.tip").cluetip({ splitTitle: "|" });
    
    filter_by_objsts();
    
    initRichTextEditor("ttstxt","MyBasicOptions");
    $("#ttstxt").ckeditorGet().setReadOnly();
    
    $("#form_promote input[name=promotetype]").change(function () {
        if ($(this).val()=="getxpz") {
            $("#addcomm, #exec-opts").hide("slow");
            
        } else {
            $("#addcomm, #exec-opts").show("slow");
        }
    });
    
    loadTickets();
});

function loadTickets() {

    $("#div_promote #assoc_tickets").html('{$smarty.const._MSG_WAIT_SM_}');
    $("#div_promote #assoc_tickets").load(
                                            "/Chkin/tickets",
                                            { projguid:"{$left_projguid}" },
                                            function () {
                                                $("#assoc_tickets :checkbox").change(function() {
                                                    if ($("#assoc_tickets :checkbox:checked").size()) {
                                                        $("#ttstxt").ckeditorGet().setReadOnly(false);
                                                    } else {
                                                        $("#ttstxt").ckeditorGet().setReadOnly();
                                                    }
                                                });
                                            }                                            
    );

}
</script>
<div id="div_promote">
    <div class="column left">
        <img src="{$smarty.const._IMG_PROMOTE_SM_}" alt="{$smarty.const._LBL_PROMOTE_}" title="{$smarty.const._LBL_PROMOTE_}"> Objects in <strong>Source</strong> different from objects in <strong>Target</strong>
        &nbsp;|&nbsp;{$periods_filter}
        <span id="filterctrls" style="display:none;">
        &nbsp;|&nbsp;
        <input type="checkbox" id="gen1chk" name="gen1chk" onchange="filter_by_objsts();"> <img class="tip" alt="gen1" src="../img/icons/16/lightning_green.png" title="Visual Tag Information|Objects tagged with this icon were detected as being automatically generated by some GeneXus process (eg. from a Pattern instance).">&nbsp;
        <input type="checkbox" id="gen2chk" name="gen2chk" onchange="filter_by_objsts();" checked> <img class="tip" alt="gen2" src="../img/icons/16/lightning_red.png" title="Visual Tag Information|Objects tagged with this icon were detected as being automatically generated by some GeneXus process (eg. from a Pattern instance) BUT some of it has been modified by a user.">&nbsp;
        <input type="checkbox" id="olderchk" name="olderchk" onchange="filter_by_objsts();"> <img class="tip" alt="older" src="../img/icons/16/warning.png" title="Visual Tag Information|Objects tagged with this icon were detected as being OLDER than its target">
        </span>
    </div>
    <div class="column right">
        <span id="resultrows"></span> row(s)
    </div>
    
    <br clear="all">

    {if !is_array($local_changes)}
        {$InProve_Smarty->msg("ui-icon-alert", $local_changes)}
    {else}
        <form id="form_promote" action="/Comp-Kbs/promote" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="left_projguid" value="{$left_projguid}">
        <input type="hidden" name="left_kbguid" value="{$smarty.request.left_kbguid}">
        <input type="hidden" name="left_mdlid" value="{$smarty.request.left_mdlid|default:1}">
        <input type="hidden" name="right_projguid" value="{$right_projguid}">
        <input type="hidden" name="right_kbguid" value="{$smarty.request.right_kbguid}">
        <input type="hidden" name="right_mdlid" value="{$smarty.request.right_mdlid|default:1}">
            <table width="100%" align="center" class="list">
            <thead>
                <tr><th>Object</th><th>Description</th><th>Modified &darr;</th><th><span style='cursor:pointer;' title='{$smarty.const._TITLE_CHKALL_}' onclick='setcheck("#form_promote .objlst");setsubmitsts("#form_promote .objlst", "#form_promote button");'>&nbsp;{$smarty.const._LBL_CHKALL_}</span></th></tr>
            </thead>
            <tbody>
                {foreach from=$local_changes key=k item=rec}
                <tr class='{cycle values="odd,even"} gen{$rec.gxinfo.generated} {$rec.gxinfo.COMP} {$rec.gxinfo.updperiod}' style="{if $rec.gxinfo.generated==1 || $rec.gxinfo.COMP=='OLDER'}display:none;{/if}">
                <td>&nbsp;
                    {if $rec.gxinfo.objcls!=111}
                    <img src="../img/gx/objclass/{$gx_objcls[$rec.gxinfo.objcls].small}.png" title="{$gx_objcls[$rec.gxinfo.objcls].long}">
                    &nbsp;{$rec.gxinfo.objnam}
                    {else}
                    <img src="../img/icons/16/file.png" title="File">
                    &nbsp;{$rec.gxinfo.objnam|basename}
                    {/if}
                </td>
                <td>
                    &nbsp;{$rec.gxinfo.objdsc|utf8_encode}
                </td>
                <td align="center">
                    &nbsp;{$InProve_Smarty->ts2str($rec.gxinfo.objupdts)}
                    {if $rec.gxinfo.COMP=="NEW" && $rec.gxinfo.COMPREF!="DELETED_FROM_GXKB"}
                    &nbsp;<img alt="new" src="../img/icons/16/new.png" title="Does not exist in target.">
                    {elseif $rec.gxinfo.COMP=="NEW" && $rec.gxinfo.COMPREF=="DELETED_FROM_GXKB"}
                    &nbsp;<img alt="del" src="../img/icons/16/cleanup.png" title="Object detected as deleted in source.">
                    {elseif $rec.gxinfo.COMP=="OLDER"}
                    &nbsp;<img alt="older" src="../img/icons/16/warning.png" title="Target modified on {$InProve_Smarty->ts2str($rec.gxinfo.COMPREF)}">
                    {/if}
                    {if $rec.gxinfo.generated==1}
                    &nbsp;<img alt="gen1" src="../img/icons/16/lightning_green.png" title="Automatically generated.">
                    {else if $rec.gxinfo.generated==2}
                    &nbsp;<img alt="gen2" src="../img/icons/16/lightning_red.png" title="Automatically generated BUT modified.">
                    {/if}
                </td>
                <td align="center">
                    {if $rec.gxinfo.lock && $rec.gxinfo.lock.setuserguid == $InProve_Smarty->getSessVar("MyProfile.userdata.userguid")}
                        <img class="tip" alt="locked" src="{$smarty.const._IMG_LOCK_OWN_SM_}" title="Object's Lock Status|You have an active lock on this object since '{$InProve_Smarty->ts2str($rec.gxinfo.lock.setts)}'">
                    {elseif $rec.gxinfo.lock && $rec.gxinfo.lock.setuserguid != $InProve_Smarty->getSessVar("MyProfile.userdata.userguid")}
                        <img class="tip" alt="locked" src="{$smarty.const._IMG_LOCK_SM_}" title="Object's Lock Status|'{$InProve_Smarty->guid2name('gxt_users', $rec.gxinfo.lock.setuserguid)}' has an active lock on this object since '{$InProve_Smarty->ts2str($rec.gxinfo.lock.setts)}'">
                    {else}
                        {if $rec.b64}
                        <span id="{$rec.b64|sha1}">
                            {if $rec.gxinfo.chkin}
                            <img src="{$smarty.const._IMG_CLOCK_SM_}" alt="Pending" title="Consolidation Pending">
                            {else}
                            <input class="objlst" type=checkbox name='checked_objs[]' value='{$rec.b64}' onclick='setsubmitsts("#form_promote .objlst", "#form_promote button");'>
                            {/if}
                        </span>
                        {/if}
                    {/if}
                </td>
                </tr>
                {/foreach}
            </tbody>
            </table>

            <p id="flow-desc">
            <strong>Promotion Flow</strong><br>
            &nbsp;&nbsp;&nbsp;{$InProve_Smarty->guid2name('gxt_kbs', $smarty.request.left_kbguid)} <span style="font-size:2em;line-height:1em;">&nbsp;»&nbsp;</span> {$InProve_Smarty->guid2name('gxt_kbs', $smarty.request.right_kbguid)}
            </p>
            <p id="promo-opts">
            <strong>Promotion Options</strong><br>
            &nbsp;&nbsp;<input type="radio" name="promotetype" value="import" checked>&nbsp;<img src="{$smarty.const._IMG_PROMOTE_SM_}" alt="{$smarty.const._LBL_PROMOTE_}"> Export from Source + Import in Target
            &nbsp;&nbsp;<input type="radio" name="promotetype" value="getxpz">&nbsp;<img src="{$smarty.const._IMG_PACKAGE_SM_}" alt="{$smarty.const._LBL_PACKAGE_}"> Export from Source + Download for Manual Import
            </p>
            <p id="export-opts">
            <strong>Export Options</strong><br>
            &nbsp;&nbsp;&nbsp;Set "Dependency Type" to {$dependency_type} and "References Type" to {$references_type}
            </p>
            <p id="exec-opts">
            <strong>Execution Options</strong><br>
            &nbsp;&nbsp;<img alt="queue" src="{$smarty.const._IMG_CLOCK_SM_}" title="Queue for asynchronous execution"> Queue for asynchronous execution <input type="checkbox" id="queue4exec" name="queue4exec" value="1" {$InProve_Smarty->get_prm("promote_async_status")}>
            </p>

            <div id="addcomm" class="newitm" style="padding:10px 0;">        
            <div class="myhr"></div>
                <img style="float:left; margin:0 0 5px;" width="48" height="48" src="{$smarty.server.HTTP_REFERER}/Ajax/getimg?userguid={$InProve_Smarty->getSessVar('MyProfile.userdata.userguid')}&v={$smarty.now}" alt="My Image">
                <div style="margin-left:60px;">
                    <div style="float:left;vertical-align:top;width:60%;">
                        <strong>You may want to add a blog entry to the selected tickets...</strong>
                        <p><textarea rows="8" cols="80" id="ttstxt" name="ttstxt"></textarea></p>
                    </div>
                    <div style="float:right;">
                        <strong>Tickets you can associate this promotion to...</strong>
                        <div id="assoc_tickets">                
                        </div>
                    </div>
                </div>
            </div>

            <br clear="all">
            <div class="myhr"></div>

            <div id="bottom_left" class="left">
                {include file='../skel/ttp.phtml'}
            </div>
            <div  id="bottom_right" class="buttons right">
                {$smarty.const._FORM_BTN_PROMOTE_}
            </div>

        </form>
        <br clear="all">
    {/if}
</div>