                    <button type='button' id='reset_btn' name='reset_btn' value='{$smarty.const._LBL_RESET_}"' title='Click to reset all non-commited changes"' onclick="hardReset();">
                    <img src='{$smarty.const._IMG_RESET_SM_}'> {$smarty.const._LBL_RESET_}
                    </button>
                {/if}
                {$smarty.const._FORM_BTN_COMMIT_}
            </div>

        </form>
        <br clear="all">
    {/if}
